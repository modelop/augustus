import sys
from optparse import OptionParser, make_option

import augustus.core.xmlbase as xmlbase
from augustus.applications.pmmlSplit import *

if __name__ == "__main__":
    parser = OptionParser(usage="usage: %prog config\nPmmlSplit PMML files, driven by an XML configuration file", option_list=[])
    (options, args) = parser.parse_args()

    if len(args) != 1:
        parser.print_help()
        sys.exit(-1)

    xmlbase.loadfile(args[0], PmmlSplit, lineNumbers=True).evaluate()
